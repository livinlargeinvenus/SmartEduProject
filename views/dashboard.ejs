<%- include('partials/_headers'); %>
	<!-- END LOADER -->

<!-- Start header -->
<%- include('partials/_navigation'); %>
	<!-- End header -->

<% if (user) { %>
	<!-- STUDENT -->
	<% if (user.role==='student' ) { %>

		<div class="all-title-box">
			<div class="container text-center">
				<h1>
					<%= user.name %> <span class="m_1">STUDENT</span>
				</h1>
			</div>
		</div>

		<div id="overviews" class="section wb">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 blog-post-single">
						<div class="blog-author">
							<div class="author-bio">
								<h3 class="author_name">Courses Enrolled by: <%= user.name %></a></h3>
							</div>
						</div>

					</div><!-- end col -->
				</div><!-- end row -->
				<div class="row mt-5">

					<% user.courses.forEach(course=> { %>

						<div class="col-lg-6 col-md-6 col-12">
							<div class="course-item mb-5">
								<div class="image-blog">
									<img src="/images/blog_1.jpg" alt="" class="img-fluid">
								</div>
								<div class="course-br">
									<div class="course-title">
										<h2><a href="/courses/<%= course.slug %>" title="">
												<%= course.name %>
											</a></h2>
									</div>
									<div class="course-desc">
										<p>
											<%= course.description %>
										</p>
									</div>
									<form method="POST" action="/courses/release">
										<input type="hidden" name="course_id" value="<%= course._id %>">
										<button
											class="btn btn-lg btn-danger text-white"><span>RELEASE</span></button>
									</form>
								</div>
							</div>
						</div><!-- end col -->

					<% }) %>

				</div><!-- end row -->
			</div><!-- end container -->
		</div><!-- end section -->

	<% } %>

	<!-- TEACHER -->
	<% if (user.role==='teacher' ) { %>

		<div class="all-title-box">
			<div class="container text-center">
				<h1>
					<%= user.name %> <span class="m_1">TEACHER</span>
				</h1>
			</div>
		</div>

		<div id="overviews" class="section wb">
			<div class="container">
				<div class="row">
					<!-- MODAL BUTTON -->
					<div class="col-lg-12 text-center">
						<button class="btn btn-lg btn-warning rounded-0 text-white" href="#"
							data-toggle="modal" data-target="#addCourse"><span>CREATE NEW
								COURSE</span></button>
					</div>
					<div class="col-lg-12 blog-post-single">
						<div class="blog-author">
							<div class="author-bio">
								<h3 class="author_name">COURSE FROM: <%= user.name %></a></h3>
							</div>
						</div>
						<% if (flashMessage) { %>
							<% if (flashMessage.success) { %>

								<div class="alert alert-success">
									<%= flashMessage.success %>
								</div>

						<% } else if (flashMessage.error) { %>

							<div class="alert alert-danger">
								<%= flashMessage.error %>
							</div>

						<% } %>
	<% } %>
					</div><!-- end col -->
				</div><!-- end row -->
				<div class="row mt-5">

					<% courses.forEach( course=> { %>

						<div class="col-lg-6 col-md-6 col-12">
							<div class="course-item mb-5">
								<div class="image-blog">
									<img src="/images/blog_1.jpg" alt="" class="img-fluid">
								</div>
								<div class="course-br">
									<div class="course-title">
										<h2><a href="/courses/<%= course.slug %>" title="">
												<%= course.name %>
											</a></h2>
									</div>
									<div class="course-desc">
										<p>
											<%= course.description %>
										</p>
									</div>
									<div class="clearfix">
										<ul style="list-style-type: none;">
											<!-- UPDATE -->
											<li style="float: left;"><button
													class="btn btn-primary rounded-1 text-white"
													data-toggle="modal"
													data-target="#updateCourse<%= course._id %>"><span>UPDATE</span></button>
											</li>
											<!-- DELETE -->
											<li style="float: right;"><a
													href="/courses/<%= course.slug %>?_method=DELETE"
													onclick="return confirm('ARE YOU SURE')"
													class="btn btn-danger rounded-1 text-white"><span>DELETE</span></a>
											</li>
										</ul>
									</div>
								</div>
							</div>
						</div><!-- end col -->
						<!-- ADD Modal -->
						<div class="modal fade" id="updateCourse<%= course._id %>" tabindex="-1"
							role="dialog" aria-labelledby="myModalLabel">
							<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
								<div class="modal-content">
									<div class="modal-body customer-box">
										<!-- Tab panes -->
										<div class="tab-content">
											<div class="tab-pane active" id="Login">
												<form method="POST"
													action="/courses/<%= course.slug %>?_method=PUT"
													class="form-horizontal">
													<div class="form-group">
														<div class="col-sm-12">
															<input type="text" name="name"
																value="<%= course.name %>"
																class="form-control"
																placeholder="Course Name">
														</div>
													</div>
													<div class="form-group">
														<div class="col-sm-12">
															<input type="hidden" name="role"
																class="form-control"
																value="<%= user.role %>">
														</div>
													</div>
													<div class="form-group">
														<div class="col-sm-12">
															<textarea rows="8" name="description"
																class="form-control"
																placeholder="Course Description"
																required><%= course.description %></textarea>
														</div>
													</div>
													<div class="form-group">
														<div class="col-sm-12">
															<select name="category"
																class="form-control">

																<% categories.forEach( category=> { %>

																	<option value="<%= category._id %>">
																		<%= category.name %>
																	</option>

																<% }) %>

															</select>
														</div>
													</div>
													<div class="row">
														<div class="col-sm-10">
															<button type="submit"
																class="btn btn-light btn-radius btn-brd grd1">
																Submit
															</button>
															<button type="submit"
																class="btn btn-light btn-radius btn-brd grd1"
																data-dismiss="modal" aria-hidden="true">
																Cancel
															</button>
														</div>
													</div>
												</form>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
				<% }) %>

				</div><!-- end row -->
			</div><!-- end container -->
		</div><!-- end section -->

		<!-- ADD Modal -->
		<div class="modal fade" id="addCourse" tabindex="-1" role="dialog"
			aria-labelledby="myModalLabel">
			<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
				<div class="modal-content">
					<div class="modal-body customer-box">
						<!-- Tab panes -->
						<div class="tab-content">
							<div class="tab-pane active" id="Login">
								<form method="POST" action="/courses" class="form-horizontal">
									<div class="form-group">
										<div class="col-sm-12">
											<input type="text" name="name" class="form-control"
												placeholder="Course Name">
										</div>
									</div>
									<div class="form-group">
										<div class="col-sm-12">
											<input type="hidden" name="role" class="form-control"
												value="<%= user.role %>">
										</div>
									</div>
									<div class="form-group">
										<div class="col-sm-12">
											<textarea rows="8" name="description" class="form-control"
												placeholder="Course Description" required></textarea>
										</div>
									</div>
									<div class="form-group">
										<div class="col-sm-12">
											<select name="category" class="form-control">

												<% categories.forEach( category=> { %>

													<option value="<%= category._id %>">
														<%= category.name %>
													</option>

												<% }) %>

											</select>
										</div>
									</div>
									<div class="row">
										<div class="col-sm-10">
											<button type="submit"
												class="btn btn-light btn-radius btn-brd grd1">
												Submit
											</button>
											<button type="submit"
												class="btn btn-light btn-radius btn-brd grd1"
												data-dismiss="modal" aria-hidden="true">
												Cancel
											</button>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	<% } %>

	<!-- ADMIN -->
	<% if (user.role==='admin' ) { %>

		<div class="all-title-box">
			<div class="container text-center">
				<h1>
					<%= user.name %> <span class="m_1">ADMIN</span>
				</h1>
			</div>
		</div>

		<div id="overviews" class="section wb">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 blog-post-single">
						<div class="blog-author">
							<div class="author-bio">
								<h3 class="author_name">Courses Enrolled by: <%= user.name %>
										</a></h3>
							</div>
						</div>

					</div><!-- end col -->
				</div><!-- end row -->
				<div class="row mt-5">
					<h2>User</h2>
					<table class="table">
						<thead>
							<tr>
								<th scope="col">ID#</th>
								<th scope="col">Email</th>
								<th scope="col">Role</th>
								<th scope="col">Delete</th>
							</tr>
						</thead>
						<tbody>
							<% users.forEach( user =>  { %>
							<tr>
								<th scope="row"><%= user._id %></th>
								<td><%= user.email %></td>
								<td><%= user.role %></td>
								<td><a
									href="/users/<%= user._id %>?_method=DELETE"
									onclick="return confirm('ARE YOU SURE')"
									class="btn btn-danger rounded-1 text-white"><span>DELETE</span></a>
								</td>
								
							</tr>
							<% }); %>
						</tbody>
					</table>
				</div><!-- end row -->
				<div class="row mt-5">
					<table class="table">
						<h2>Categories</h2>
						<thead>
							<tr>
								<th scope="col">ID#</th>
								<th scope="col">Name</th>
								<th scope="col"><button class="btn btn-lg btn-warning rounded-1 text-white" href="#"
									data-toggle="modal" data-target="#addCategory"><span>ADD</span></button></th>
								<th scope="col">Delete</th>
							</tr>
						</thead>
						<tbody>
							<% categories.forEach( category =>  { %>
							<tr>
								<th scope="row"><%= category._id %></th>
								<td><%= category.name %></td>
								<td><button
									class="btn btn-primary rounded-1 text-white"
									data-toggle="modal"
									data-target="#updateCategory<%= category._id %>"><span>UPDATE</span></button></td>
								<td><a
									href="/categories/<%= category._id %>?_method=DELETE"
									onclick="return confirm('ARE YOU SURE')"
									class="btn btn-danger rounded-1 text-white"><span>DELETE</span></a>
								</td>
								
							</tr>
							<!-- ADD Modal -->
							<div class="modal fade" id="updateCategory<%= category._id %>" tabindex="-1" role="dialog"
							aria-labelledby="myModalLabel">
							<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
								<div class="modal-content">
									<div class="modal-body customer-box">
										<!-- Tab panes -->
										<div class="tab-content">
											<div class="tab-pane active" id="Login">
												<form method="POST" action="/categories/<%= category.slug %>?_method=PUT" class="form-horizontal">
													<div class="form-group">
														<div class="col-sm-12">
															<input type="text" name="name" value="<%= category.name %>" class="form-control"
																placeholder="Category Name">
														</div>
													</div>
													<div class="row">
														<div class="col-sm-10">
															<button type="submit"
																class="btn btn-light btn-radius btn-brd grd1">
																Submit
															</button>
															<button type="submit"
																class="btn btn-light btn-radius btn-brd grd1"
																data-dismiss="modal" aria-hidden="true">
																Cancel
															</button>
														</div>
													</div>
												</form>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
							<% }); %>
						</tbody>
					</table>
				</div><!-- end row -->
			</div><!-- end container -->
		</div><!-- end section -->

		<!-- ADD Modal -->
		<div class="modal fade" id="addCategory" tabindex="-1" role="dialog"
		aria-labelledby="myModalLabel">
		<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-body customer-box">
					<!-- Tab panes -->
					<div class="tab-content">
						<div class="tab-pane active" id="Login">
							<form method="POST" action="/categories" class="form-horizontal">
								<div class="form-group">
									<div class="col-sm-12">
										<input type="text" name="name" class="form-control"
											placeholder="Category Name">
									</div>
								</div>
								<div class="row">
									<div class="col-sm-10">
										<button type="submit"
											class="btn btn-light btn-radius btn-brd grd1">
											Submit
										</button>
										<button type="submit"
											class="btn btn-light btn-radius btn-brd grd1"
											data-dismiss="modal" aria-hidden="true">
											Cancel
										</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% } %>

<% } %>

<!-- footer -->
<%- include('partials/_footer'); %>
	<!-- end footer -->